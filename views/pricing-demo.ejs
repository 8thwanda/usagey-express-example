<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head', { title }) %>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-4">Pricing Models Demo</h1>
      <p class="text-gray-600">
        Explore different pricing models and see how they affect billing based on usage.
      </p>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
        <p class="text-red-700 font-medium">Error</p>
        <p class="text-red-500"><%= error %></p>
      </div>
    <% } %>

    <% if (typeof success !== 'undefined' && success) { %>
      <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6">
        <p class="text-green-700 font-medium"><%= success %></p>
      </div>
    <% } %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Pricing Model Selector -->
      <div class="lg:col-span-1">
        <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200 space-y-6">
          <h2 class="text-xl font-semibold mb-4">Pricing Models</h2>
          
          <form action="/pricing-demo/calculate" method="POST" class="space-y-6">
            <div class="space-y-4">
              <% pricingModels.forEach(model => { %>
                <div 
                  class="border rounded-lg p-4 cursor-pointer transition <%= (locals.selectedModel && locals.selectedModel.id === model.id) ? 'border-blue-500 bg-blue-50' : 'border-gray-200 hover:border-gray-300' %>"
                  onclick="selectModel(this, '<%= model.id %>')"
                >
                  <h3 class="font-medium"><%= model.name %></h3>
                  <p class="text-sm text-gray-600 mt-1"><%= model.description %></p>
                  <% if (model.basePrice > 0) { %>
                    <p class="text-sm mt-2">
                      <span class="font-medium">Base price:</span> $<%= model.basePrice.toFixed(2) %>/month
                    </p>
                  <% } %>
                  <input 
                    type="radio" 
                    name="modelId" 
                    value="<%= model.id %>" 
                    class="hidden"
                    <%= (locals.selectedModel && locals.selectedModel.id === model.id) ? 'checked' : '' %>
                    <%= (!locals.selectedModel && model.id === 'per-unit') ? 'checked' : '' %>
                  >
                </div>
              <% }); %>
            </div>

            <div class="pt-4 border-t border-gray-200">
              <h3 class="font-medium mb-2">Simulation Usage</h3>
              <div class="space-y-2">
                <label for="usageInput" class="text-sm text-gray-600">
                  Usage Quantity
                </label>
                <input
                  id="usageInput"
                  name="usage"
                  type="number"
                  min="1"
                  max="100000"
                  value="<%= typeof usageQuantity !== 'undefined' ? usageQuantity : 2500 %>"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
              </div>

              <button 
                type="submit" 
                class="w-full bg-blue-600 text-white px-4 py-2 rounded font-medium hover:bg-blue-700 transition-colors mt-4"
              >
                Simulate Billing
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- Pricing Tiers and Billing Calculation -->
      <div class="lg:col-span-2 space-y-6">
        <% if (locals.selectedModel) { %>
          <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
            <h2 class="text-xl font-semibold mb-4">
              <%= selectedModel.name %> Model Details
            </h2>
            
            <div class="space-y-4">
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Tier
                      </th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Range
                      </th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Price Per Unit
                      </th>
                      <% if (selectedModel.id === 'hybrid') { %>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                          Notes
                        </th>
                      <% } %>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% selectedModel.tiers.forEach(tier => { %>
                      <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                          <%= tier.name %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                          <%= tier.startQuantity.toLocaleString() %> - <%= tier.endQuantity ? tier.endQuantity.toLocaleString() : '∞' %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                          $<%= tier.pricePerUnit.toFixed(4) %>
                        </td>
                        <% if (selectedModel.id === 'hybrid') { %>
                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= tier.startQuantity === 0 ? 'Included with base price' : 'Overage charges' %>
                          </td>
                        <% } %>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>

              <% if (selectedModel.basePrice > 0) { %>
                <div class="bg-gray-50 p-4 rounded-md">
                  <p class="text-sm font-medium">
                    Base Fee: $<%= selectedModel.basePrice.toFixed(2) %>/month
                  </p>
                  <% if (selectedModel.id === 'hybrid') { %>
                    <p class="text-sm text-gray-600 mt-1">
                      Includes the first 5,000 units at no additional cost.
                    </p>
                  <% } %>
                </div>
              <% } %>
            </div>
          </div>

          <% if (typeof totalCost !== 'undefined' && typeof usageQuantity !== 'undefined') { %>
            <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
              <h2 class="text-xl font-semibold mb-4">Billing Calculation</h2>
              
              <div class="space-y-4">
                <div class="flex justify-between items-center p-4 bg-gray-50 rounded-md">
                  <span class="font-medium">Usage Quantity</span>
                  <span><%= usageQuantity.toLocaleString() %> units</span>
                </div>
                
                <div class="space-y-4">
                  <% if (selectedModel.basePrice > 0) { %>
                    <div class="flex justify-between items-center border-b pb-4">
                      <span>Base Fee</span>
                      <span>$<%= selectedModel.basePrice.toFixed(2) %></span>
                    </div>
                  <% } %>

                  <% if (locals.tierBreakdown) { %>
                    <% tierBreakdown.forEach(tier => { %>
                      <div class="flex justify-between items-center">
                        <span><%= tier.tier %> (<%= tier.quantity.toLocaleString() %> units @ $<%= tier.rate.toFixed(4) %>)</span>
                        <span>$<%= tier.cost.toFixed(2) %></span>
                      </div>
                    <% }); %>
                  <% } %>

                  <div class="flex justify-between items-center pt-4 border-t border-gray-200 font-bold">
                    <span>Total Monthly Cost</span>
                    <span class="text-xl">$<%= totalCost.toFixed(2) %></span>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        <% } %>

        <div class="bg-blue-50 p-6 rounded-lg">
          <h2 class="text-xl font-semibold mb-4">How Pricing Models Work</h2>
          <div class="space-y-4 text-blue-800">
            <div>
              <h3 class="font-medium">Per Unit Pricing</h3>
              <p class="text-sm">
                The simplest model. Each unit costs the same, regardless of volume. 
                Total cost = base fee + (units × rate).
              </p>
            </div>
            
            <div>
              <h3 class="font-medium">Tiered Pricing</h3>
              <p class="text-sm">
                Different rates for different usage volumes. Each tier has its own per-unit price.
                Units are charged at the rate for their respective tier.
              </p>
            </div>
            
            <div>
              <h3 class="font-medium">Hybrid Pricing</h3>
              <p class="text-sm">
                Combines a base subscription fee with usage-based charges.
                Typically includes a certain amount of usage, with overage charges for additional usage.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script>
    function selectModel(element, modelId) {
      // Update visual selection
      document.querySelectorAll('.border-blue-500').forEach(el => {
        el.classList.remove('border-blue-500', 'bg-blue-50');
        el.classList.add('border-gray-200');
      });
      element.classList.remove('border-gray-200');
      element.classList.add('border-blue-500', 'bg-blue-50');
      
      // Update form value
      element.querySelector('input[type="radio"]').checked = true;
    }
  </script>
</body>
</html>